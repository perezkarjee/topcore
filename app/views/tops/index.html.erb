<h1>Listing tops</h1>

<table>
  <thead>
    <tr>
      <th>Top1</th>
      <th>Desc1</th>
      <th>Top2</th>
      <th>Desc2</th>
      <th>Top3</th>
      <th>Desc3</th>
      <th>Top4</th>
      <th>Desc4</th>
      <th>Top5</th>
      <th>Desc5</th>
      <th>Ispublic</th>
      <th>Iscategory</th>
      <th>User</th>
      <th>Sources</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tops.each do |top| %>
      <tr>
        <td><%= top.top1 %></td>
        <td><%= top.desc1 %></td>
        <td><%= top.top2 %></td>
        <td><%= top.desc2 %></td>
        <td><%= top.top3 %></td>
        <td><%= top.desc3 %></td>
        <td><%= top.top4 %></td>
        <td><%= top.desc4 %></td>
        <td><%= top.top5 %></td>
        <td><%= top.desc5 %></td>
        <td><%= top.ispublic %></td>
        <td><%= top.iscategory %></td>
        <td><%= top.user %></td>
        <td><%= top.sources %></td>
        <td><%= link_to 'Show', top %></td>
        <td><%= link_to 'Edit', edit_top_path(top) %></td>
        <td><%= link_to 'Destroy', top, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

