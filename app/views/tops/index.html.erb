<%- model_class = Top -%>
<div class="page-header">
  <h1><%=t '.title', :default => Top %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:top1) %></th>
      <th><%= model_class.human_attribute_name(:desc1) %></th>
      <th><%= model_class.human_attribute_name(:top2) %></th>
      <th><%= model_class.human_attribute_name(:desc2) %></th>
      <th><%= model_class.human_attribute_name(:top3) %></th>
      <th><%= model_class.human_attribute_name(:desc3) %></th>
      <th><%= model_class.human_attribute_name(:top4) %></th>
      <th><%= model_class.human_attribute_name(:desc4) %></th>
      <th><%= model_class.human_attribute_name(:top5) %></th>
      <th><%= model_class.human_attribute_name(:desc5) %></th>
      <th><%= model_class.human_attribute_name(:ispublic) %></th>
      <th><%= model_class.human_attribute_name(:iscategory) %></th>
      <th><%= model_class.human_attribute_name(:sources) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tops.each do |top| %>
      <tr>
        <td><%= top.id %></td>
        <td><%= top.top1 %></td>
        <td><%= top.desc1 %></td>
        <td><%= top.top2 %></td>
        <td><%= top.desc2 %></td>
        <td><%= top.top3 %></td>
        <td><%= top.desc3 %></td>
        <td><%= top.top4 %></td>
        <td><%= top.desc4 %></td>
        <td><%= top.top5 %></td>
        <td><%= top.desc5 %></td>
        <td><%= top.ispublic %></td>
        <td><%= top.iscategory %></td>
        <td><%= top.sources %></td>
        <td><%=l top.created_at, format: :long %></td>
        <td>
          <%= link_to top_path(top), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to top_path(top), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_top_path,
            :class => 'btn btn-primary' %>
