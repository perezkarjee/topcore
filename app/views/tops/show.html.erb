<%- model_class = Top -%>
<div class="page-header">
  <h1><%=t '.title', :default => Top %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top1) %></dt>
      <dd><pre class="prettyprint"><%= @top.top1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc1) %></dt>
      <dd><pre class="prettyprint"><%= @top.desc1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top2) %></dt>
      <dd><pre class="prettyprint"><%= @top.top2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc2) %></dt>
      <dd><pre class="prettyprint"><%= @top.desc2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top3) %></dt>
      <dd><pre class="prettyprint"><%= @top.top3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc3) %></dt>
      <dd><pre class="prettyprint"><%= @top.desc3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top4) %></dt>
      <dd><pre class="prettyprint"><%= @top.top4 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc4) %></dt>
      <dd><pre class="prettyprint"><%= @top.desc4 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:top5) %></dt>
      <dd><pre class="prettyprint"><%= @top.top5 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc5) %></dt>
      <dd><pre class="prettyprint"><%= @top.desc5 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ispublic) %></dt>
      <dd><pre class="prettyprint"><%= @top.ispublic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:iscategory) %></dt>
      <dd><pre class="prettyprint"><%= @top.iscategory %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sources) %></dt>
      <dd><pre class="prettyprint"><%= @top.sources %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tops_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_top_path(@top), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              top_path(@top),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

